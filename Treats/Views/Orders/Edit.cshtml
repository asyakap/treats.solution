@{
  Layout = "_Layout";
}

@model Treats.Models.Order

<h2>Edit this Order</h2>
<h4>@Html.DisplayFor(model => model.Date)</h4>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.OrderId)

  @Html.LabelFor(model => model.Date)
  @Html.EditorFor(model => model.Date, new { placeholder = "MM/DD/YYYY" })
  @Html.LabelFor(model => model.Details, "Order Details")
  @Html.EditorFor(model => model.Details)

  <input type="submit" value="Save" />
}