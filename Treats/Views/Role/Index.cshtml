@{
  Layout = "_Layout";
}

@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ROLES";
}

  
<h1 class="bg-info text-white">All Roles</h1>
<p>@Html.ActionLink("Add new role", "Create")</p>
  
<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Name</th><th>Users</th><th>Update</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td><p>@Html.ActionLink("Update", "Update")</p></td>
        </tr>
    }
</table>