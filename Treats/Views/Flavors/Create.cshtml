@{
  Layout = "_Layout";
}

@model Treats.Models.Flavor

<h4>Add a new flavor</h4>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    <input type="submit" value="Add new flavor" class="btn btn-primary" />
}
<p>@Html.ActionLink("Back to Flavors List", "Index")</p>